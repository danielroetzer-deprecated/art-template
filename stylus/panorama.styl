.panorama
    height: 600px
    width: 100%
    background-image: url("../img/waves-and-stones.jpg");
    background-size: cover;

    .panorama-content
        margin: auto;
        width: 600px;
        border-radius: 8px
        background-color: rgba(255,255,255,0.2)
        padding: 10px;
        text-align: center;
        color: white

        .quote
            font-size: 1.5rem
            font-weight: 300
            font-style: italic;

        .quote-from
            font-size: 1.25rem
            font-weight: 300

            position: relative;
            left: 100px

            &:before
                content: " - "
